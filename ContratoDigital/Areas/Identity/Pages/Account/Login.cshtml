@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="container" data-aos="fade-in"  data-aos-delay="500">
    <div class="row justify-content-center p-5">
        <div class="col-12 col-md-8">
            <section>
                <div class="polymer-box bg-white-alpha">
                    <h2 class="text-center"><img src="~/images/yggdrassil.png" class="img-fluid" style="max-width:100px;" /><br /> Mi Contrato </h2>
                </div>
            </section>
            <section class="polymer-box bg-white-alpha">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="Input_Email">Usuario</label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Input_Password">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control form-control-lg" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                Mantenerme conectado
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-azul">Ingresar</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Olvidé mi password</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
