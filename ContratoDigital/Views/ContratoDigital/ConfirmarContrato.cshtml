
@{
    ViewData["Title"] = "ConfirmarContrato";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section>
    <div class="container h-75"  style="min-height:25rem;">
        <div class="row justify-content-center align-items-center" style="min-height:25rem;">
            <div class="col-12 col-md-8">
                @if ((bool)ViewData["IsConfirmed"])
                {
                    <div class="alert alert-success alert-dismissible fade show  bg-qurii qurii-white" role="alert">
                        ¡Su información ha sido registrada exitosamente!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                }
                else
                {

                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Usted ya ha recibido su contrato anteriormente</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

