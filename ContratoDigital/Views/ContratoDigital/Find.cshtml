@model IEnumerable<ContratoDigital.Models.Contrato>
@{
    ViewData["Title"] = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div style="background: url('../../../../images/background/anotherscooter.jpg') no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;min-height: 20rem;">
                    <h1 class="text-white text-center text-shadow" data-aos="fade-in" data-aos-delay="500" style="max-width: 350px;position:absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);">
                        Buscar contrato
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                @if (ViewData["NoEncontrado"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@ViewData["NoEncontrado"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                }
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form method="post"  autocomplete="off">
                    <div class="form-row">
                        <div class="col-12 col-md-6 mt-3">
                            <label for="NumeroContrato">Número de contrato</label>
                            <input type="text" name="NumeroContrato" id="NumeroContrato" class="form-control-lg form-control" placeholder="Ej: 8000001" />
                        </div>
                        <div class="col-12 col-md-6 mt-3">
                            <label for="NumeroDocumento">Número documento</label>
                            <input type="text" name="NumeroDocumento" id="NumeroDocumento" class="form-control col-form-label-lg" placeholder="Ej: 80123456" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12 col-md-6 mt-3">
                            <label for="Nombre">Nombre</label>
                            <input type="text" name="Nombre" id="Nombre" class="form-control form-control-lg" placeholder="Antonio Amador José Nariño" /> 
                        </div>
                        <div class="col-12 col-md-6 mt-3">
                            <label for="Apellido">Apellido</label>
                            <input type="text" name="Apellido" id="Apellido" class="form-control form-control-lg" placeholder=" Álvarez del Casal " />
                        </div>
                    </div>
                   
                    <div class="form-row mt-4">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-azul btn-lg">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@if(Model != null)
{
    <section class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    Resultados de la búsqueda<hr />
                    <h2>
                        <span class="badge badge-autofinanciera">@ViewData["NumeroDocumento"]</span>
                        <span class="badge badge-autofinanciera">@ViewData["NumeroContrato"]</span>
                        <span class="badge badge-autofinanciera">@ViewData["Nombre"]</span>
                        <span class="badge badge-autofinanciera">@ViewData["Apellido"]</span>
                    </h2>
                </div>
                <div class="col-12">
                    @if(Model.Count()>0)
                    {
                        <table class="table table-striped text-center">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Acciones</th>
                                    <th>Nombre</th>
                                    <th>Teléfono</th>
                                    <th>Correo</th>                                                                       
                                    <th>Bien</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-azul dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    Acciones
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="@Url.Action("Details", "Prospectos", new {id = item.IdProspecto})"><i class="far fa-user"></i> Prospecto</a>
                                                    <a class="dropdown-item" href="@Url.Action("Details", "ContratoDigital", new {id = item.IdContrato})"><i class="far fa-list-alt"></i> Detalles</a>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", "ContratoDigital", new {id = item.IdContrato})"><i class="far fa-edit"></i> Editar</a>                                                    
                                                </div>
                                            </div>                                            
                                        </td>
                                        <td>
                                            @(item.primer_nombre + " " + item.segundo_nombre + " " + item.primer_apellido + " " + item.segundo_apellido)
                                        </td>
                                        <td>
                                            @item.telefono_suscriptor <br />@item.celular_suscriptor
                                        </td>
                                        <td>
                                            @item.email_suscriptor
                                        </td>
                                        <td>
                                            @item.detalles_bien<br />@item.valor_bien
                                        </td>
                                        <td>
                                            @(item.ConfirmacionContratos.LastOrDefault().IsAccepted ? Html.Raw("<h5><span class=\"badge badge-success p-2\"><i class=\"fas fa-check\"></i> Condiciones aceptadas</span></h5>") : Html.Raw("<h5><span class=\"badge badge-warning p-2\"><i class=\"far fa-clock\"></i> En proceso: por aceptar condiciones</span></h5>"))
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>

                    }
                </div>
            </div>
        </div>
    </section>

}

