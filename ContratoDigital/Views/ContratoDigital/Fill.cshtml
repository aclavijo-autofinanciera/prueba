@model ContratoDigital.Models.Prospecto
@{
    Random rnd = new Random();
    var contrato = rnd.Next(8000000, 8999999);
    ViewData["Title"] = "Contrato Digital";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mt-3 mb-3">
    <div class="row">
        <div class="col-12">
            <form method="post" class="ContratoValidation bootstrapValidation">
                <input type="hidden" name="IdProspecto" id="IdProspecto" value="@Model.IdProspecto" />
                <div class="form-row text-center">
                    <div class="col-12 col-sm-12 col-md-4 ">



                    </div>
                    <div class="col-12 col-sm-12 col-md-4 ">
                        <h1>Contrato Digital</h1>
                        <h5>Hoja de datos del contrato de adhesión</h5>
                    </div>
                    <div class="col-12 col-sm-12 col-md-4">
                        <label for="numero_de_contrato">Número de contrato</label>
                        <input type="text" id="numero_de_contrato" name="numero_de_contrato" readonly class="text-center form-control-plaintext form-control-lg azul font-weight-bold t-3" value="@contrato" required />
                    </div>
                </div>
                <!--#region suscriptor-->
                <section>
                    <div class="form-row">
                        <div class="col">
                            <div class="bg-azul p-3 mb-2 text-white text-center">
                                <h5 class="mb-0">Datos del suscriptor</h5>
                                <h5 class="mb-0">(o representante legal)</h5>

                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-4">
                        <div class="col-6 col-md-3">
                            <label for="primer_nombre">Primer nombre</label>
                            <input type="text" id="primer_nombre" name="primer_nombre" class="form-control form-control-lg text-uppercase" placeholder="Primer nombre" required value="@Model.PrimerNombre">
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="segundo_nombre">Segundo nombre</label>
                            <input type="text" id="segundo_nombre" name="segundo_nombre" class="form-control form-control-lg text-uppercase" placeholder="Segundo nombre" value="@Model.SegundoNombre">
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="primer_apellido">Primer apellido</label>
                            <input type="text" id="primer_apellido" name="primer_apellido" class="form-control form-control-lg text-uppercase" placeholder="Primer apellido" required value="@Model.PrimerApellido">
                        </div>
                        <div class="col-6 col-md-3">
                            <label for="segundo_apellido">Segundo apellido</label>
                            <input type="text" id="segundo_apellido" name="segundo_apellido" class="form-control form-control-lg text-uppercase" placeholder="Nombre (nombre completo o razón social)" value="@Model.SegundoApellido">
                        </div>

                    </div>
                    <div class="form-row mt-4">
                        <div class="col">
                            <label for="tipo_identificacion_suscriptor">Tipo de documento de identidad</label>
                            <select class="form-control form-control-lg" id="tipo_identificacion_suscriptor" name="tipo_identificacion_suscriptor" required>
                                <option value="">Seleccione un tipo</option>
                                @(Model.TipoDocumentoIdentidad == 1 ? Html.Raw("<option value=\"1\"  selected=\"selected\">CC</option>") : Html.Raw("<option value=\"1\">CC</option>"))
                                @(Model.TipoDocumentoIdentidad == 2 ? Html.Raw("<option value=\"2\"  selected=\"selected\">CE</option>") : Html.Raw("<option value=\"2\">CE</option>"))
                                @(Model.TipoDocumentoIdentidad == 3 ? Html.Raw("<option value=\"3\"  selected=\"selected\">NIT</option>") : Html.Raw("<option value=\"3\">NIT</option>"))
                            </select>
                        </div>
                        <div class="col">
                            <label for="documento_identidad_suscriptor">Número de documento de identidad</label>
                            <input type="text" class="form-control form-control-lg" placeholder="ie: 10000000" id="documento_identidad_suscriptor" name="documento_identidad_suscriptor" required readonly value="@Model.NumeroDocumento" />
                        </div>
                        <div class="col">
                            <label for="procedencia_documento_identidad_suscriptor">De:</label>
                            <input type="text" class="form-control form-control-lg text-uppercase" id="procedencia_documento_identidad_suscriptor" name="procedencia_documento_identidad_suscriptor" required />
                        </div>
                    </div>
                </section>
                <!--#endregion-->
                <!--#region representate legal suscriptor-->
                <section class="d-none" id="RepreentanteLegalSection">
                    <div class="card mt-4 border-azul ">
                        <div class="card-header text-white bg-azul">
                            Nombre completo o razón social
                        </div>
                        <div class="card-body">
                            <div class="form-row mt-1">
                                <div class="col-12">
                                    <label for="nombre_razon_social_representante_legal">Nombre completo o razón social</label>
