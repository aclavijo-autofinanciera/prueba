                                <div class="col">
                                    <label for="tipo_documento_representante_legal">Tipo de documento representante legal</label>
                                    <select class="form-control form-control-lg" id="tipo_documento_representante_legal" name="tipo_documento_representante_legal">
                                        <option value="CC">CC</option>
                                        <option value="CE">CE</option>
                                        <option value="NIT">NIT</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <label for="documento_identidad_representante_legal">Número de documento representate legal</label>
                                    <input type="text" class="form-control form-control-lg" placeholder="ie: 10000000" id="documento_identidad_representante_legal" name="documento_identidad_representante_legal" />
                                </div>
                                <div class="col">
                                    <label for="procedencia_documento_identidad_representante_legal">De:</label>
                                    <input type="text" class="form-control form-control-lg text-uppercase" id="procedencia_documento_identidad_representante_legal" name="procedencia_documento_identidad_representante_legal" />
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

