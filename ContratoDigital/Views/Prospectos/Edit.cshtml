@model ContratoDigital.Models.Prospecto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div style="background: url('../../../../images/background/prospect.jpg') no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;min-height: 20rem;">
                    <h1 class="text-white text-center text-shadow" data-aos="fade-in" data-aos-delay="500" style="max-width: 350px;position:absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);">
                        Editar prospecto
                    </h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <form method="post" class="ProspectoValidation bootstrapValidation" autocomplete="off">
                    <input type="hidden" id="IdProspecto" name="IdProspecto" value="@Model.IdProspecto" />
                    <div class="form-row">
                        <div class="col-12 col-md-3 mt-4">
                            <label for="PrimerNombre">Primer nombre</label>
                            <input type="text" id="PrimerNombre" name="PrimerNombre" class="form-control form-control-lg text-uppercase" value="@Model.PrimerNombre" required />
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="SegundoNombre">Segundo nombre</label>
                            <input type="text" id="SegundoNombre" name="SegundoNombre" class="form-control form-control-lg text-uppercase" value="@Model.SegundoNombre" />
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="PrimerApellido">Primer apellido</label>
                            <input type="text" id="PrimerApellido" name="PrimerApellido" class="form-control form-control-lg text-uppercase" value="@Model.PrimerApellido" required />
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="SegundoApellido">Segundo apellido</label>
                            <input type="text" id="SegundoApellido" name="SegundoApellido" class="form-control form-control-lg text-uppercase" value="@Model.SegundoApellido" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12 col-md-3 mt-4">
                            <label for="TipoDocumentoIdentidad">Tipo de documento</label>
                            <select id="TipoDocumentoIdentidad" name="TipoDocumentoIdentidad" class="form-control form-control-lg" required >
                                <option value="">Seleccione una opción</option>
                                @(Model.TipoDocumentoIdentidad == 1 ?  Html.Raw("<option value=\"1\"  selected=\"selected\">CC</option>") : Html.Raw("<option value=\"1\">CC</option>"))
                                @(Model.TipoDocumentoIdentidad == 2 ? Html.Raw("<option value=\"2\"  selected=\"selected\">CE</option>") : Html.Raw("<option value=\"2\">CE</option>"))
                                @(Model.TipoDocumentoIdentidad == 3 ? Html.Raw("<option value=\"3\"  selected=\"selected\">NIT</option>") : Html.Raw("<option value=\"3\">NIT</option>"))                                
                            </select>
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="NumeroDocumento">Número documento identidad</label>
                            <input type="text" id="NumeroDocumento" name="NumeroDocumento" class="form-control form-control-lg text-uppercase" value="@Model.NumeroDocumento" required />
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="Telefono">Teléfono</label>
                            <input type="text" id="Telefono" name="Telefono" class="form-control form-control-lg text-uppercase" value="@Model.Telefono" required />
                        </div>
                        <div class="col-12 col-md-3 mt-4">
                            <label for="Celular">Celular</label>
                            <input type="text" id="Celular" name="Celular" class="form-control form-control-lg text-uppercase" value="@Model.Celular" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col mt-4">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control form-control-lg text-uppercase" value="@Model.Email" required />
                            <hr />
                        </div>
                    </div>

                    <div class="form-row justify-content-center">
                        <div class="col-12 col-md-8 mt-4">
                            <div class="polymer-box">
                                <h4 class="text-center">Datos del bien</h4>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        Referencia
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <select id="referencia" name="referencia" class="form-control form-control-lg">
                                            <option value="">Seleccione una referencia</option>
                                            @(Html.Raw("<option value=\"" + Model.ValorDelBien + "\"  selected=\"selected\" id=\"" + Model.DescripcionDelBien + "\" >" + Model.DescripcionDelBien + "</option>"))
                                            <option value="7650000" id="BWS X">BWS X</option>
                                            <option value="8450000" id="BWS X BONO PAPELES">BWS X BONO PAPELES</option>
                                            <option value="8200000" id="BWS X FI">BWS X FI</option>
                                            <option value="9000000" id="BWS X FI BONO PAPELES">BWS X FI BONO PAPELES</option>
                                            <option value="6900000" id="BWS125">BWS125</option>
                                            <option value="7700000" id="BWS125 BONO PAPELES ">BWS125 BONO PAPELES </option>
                                            <option value="5840000" id="CRYPTON 115 BONO PAPELES">CRYPTON 115 BONO PAPELES</option>
                                            <option value="5040000" id="CRYPTON FI">CRYPTON FI</option>
                                            <option value="5840000" id="CRYPTON FI BONO PAPELES">CRYPTON FI BONO PAPELES</option>
                                            <option value="6790000" id="FAZER FI 2.0">FAZER FI 2.0</option>
                                            <option value="7590000" id="FAZER FI 2.0 BONO PAPELES">FAZER FI 2.0 BONO PAPELES</option>
                                            <option value="5700000" id="FINO">FINO</option>
                                            <option value="6500000" id="FINO BONO PAPELES">FINO BONO PAPELES</option>
                                            <option value="6290000" id="FZ-S FI 2.0">FZ-S FI 2.0</option>
                                            <option value="7090000" id="FZ-S FI 2.0 BONO PAPELES">FZ-S FI 2.0 BONO PAPELES</option>
                                            <option value="9250000" id="FZ25">FZ25</option>
                                            <option value="10050000" id="FZ25 BONO PAPELES">FZ25 BONO PAPELES</option>
                                            <option value="5250000" id="LIBERO 125 BONO PAPELES">LIBERO 125 BONO PAPELES</option>
                                            <option value="17500000" id="MT 03">MT 03</option>
                                            <option value="18300000" id="MT 03 BONO PAPELES">MT 03 BONO PAPELES</option>
                                            <option value="9900000" id="N-MAX">N-MAX</option>
                                            <option value="10700000" id="N-MAX BONO PAPELES">N-MAX BONO PAPELES</option>
                                            <option value="8600000" id="N-MAX S">N-MAX S</option>
                                            <option value="9400000" id="N-MAX S BONO PAPELES">N-MAX S BONO PAPELES</option>
                                            <option value="5140000" id="SZ-RR 2.0">SZ-RR 2.0</option>
                                            <option value="5940000" id="SZ-RR 2.0 BONO PAPELES">SZ-RR 2.0 BONO PAPELES</option>
                                            <option value="12890000" id="TRICITY">TRICITY</option>
                                            <option value="13690000" id="TRICITY BONO PAPELES">TRICITY BONO PAPELES</option>
                                            <option value="6650000" id="XTZ 125">XTZ 125</option>
                                            <option value="7450000" id="XTZ 125 BONO PAPELES">XTZ 125 BONO PAPELES</option>
                                            <option value="15900000" id="XTZ 250">XTZ 250</option>
                                            <option value="16700000" id="XTZ 250 BONO PAPELES">XTZ 250 BONO PAPELES</option>
                                            <option value="5750000" id="YBR 125 BONO PAPELES">YBR 125 BONO PAPELES</option>
                                            <option value="17250000" id="YZF R 3">YZF R 3</option>
                                            <option value="18050000" id="YZF R 3 BONO PAPELES">YZF R 3 BONO PAPELES</option>
                                            <option value="8990000" id="YZF R15">YZF R15</option>
                                            <option value="9790000" id="YZF R15 BONO PAPELES">YZF R15 BONO PAPELES</option>
                                            <option value="85990000" id="MR1">MR1</option>
                                            <option value="87000000" id="MR1">MR1 BONO PAPELES</option>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        Descripción del bien
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <input type="text" name="DescripcionDelBien" id="DescripcionDelBien" class="form-control-plaintext form-control-lg text-uppercase" value="@Model.DescripcionDelBien" required readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        Valor del bien
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <input type="text" name="costo_del_bien" id="costo_del_bien" class="form-control form-control-lg" value="@String.Format("$ {0:0,0.00}", Model.ValorDelBien)" readonly required />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">1</span> Cuota de ingreso
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="cuota_ingreso_addon">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-lg" aria-label="cuota_ingreso" aria-describedby="cuota_ingreso_addon" id="cuota_ingreso" name="cuota_ingreso" readonly value="@String.Format("{0:00,0.00}", Model.CuotaDeIngreso)" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">2</span> I.V.A. sobre la cuota de ingreso
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="iva_cuota_ingreso_addon">$</span>
                                            </div>
                                            <input type="text" id="iva_cuota_ingreso" name="iva_cuota_ingreso" aria-describedby="iva_cuota_ingreso_addon" aria-label="iva_cuota_ingreso" class="form-control form-control-lg " value="@String.Format("{0:0,0.00}", Model.IvaCuotaIngreso)" readonly required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">3</span> Total cuota de ingreso
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="total_cuota_ingreso_addon">$</span>
                                            </div>
                                            <input type="text" class="form-control form-control-lg " id="total_cuota_ingreso" name="total_cuota_ingreso" aria-labelledby="total_cuota_ingreso" aria-describedby="total_cuota_ingreso_addon" value="@String.Format("{0:0,0.00}",Model.TotalCuotaIngreso)" readonly required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">4</span> Primera cuota neta
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="primera_cuota_neta_addon">$</span>
                                            </div>
                                            <input type="text" id="primera_cuota_neta" name="primera_cuota_neta" class="form-control form-control-lg" aria-label="primera_cuota_neta" aria-describedby="primera_cuota_neta_addon" readonly value="@Model.PrimeraCuotaNeta" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge-azul badge">5</span> Administración
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" id="administracion" name="administracion" class="form-control form-control-lg" aria-label="administracion" aria-describedby="administracion_addon" readonly value="@Model.Administracion" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">6</span> I.V.A. sobre la administración
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="iva_administracion_addon">$</span>
                                            </div>
                                            <input type="text" id="iva_administracion" name="iva_administracion" class="form-control form-control-lg" aria-label="iva_administracion" aria-describedby="iva_administracion_addon" readonly value="@Model.IvaAdministracion" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">7</span> Total cuota bruta
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="total_cuota_bruta_addon">$</span>
                                            </div>
                                            <input type="text" id="total_cuota_bruta" name="total_cuota_bruta" class="form-control form-control-lg" aria-label="total_cuota_bruta" aria-describedby="total_cuota_bruta_addon" readonly value="@Model.TotalCuotaBruta" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>




                        <div class="col-12 col-md-8">
                            <div class="polymer-box">
                                <div class="row">
                                    <div class="col-12 col-md-4 font-weight-bold">
                                        <span class="badge badge-azul">8</span> Valor total primer pago
                                    </div>
                                    <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="valor_primer_pago_addon">$</span>
                                            </div>
                                            <input type="text" id="valor_primer_pago" name="valor_primer_pago" class="form-control form-control-lg" aria-label="valor_primer_pago" aria-describedby="valor_primer_pago_addon" readonly value="@Model.ValorTotalPrimerPago" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-8">
                            <div class="polymer-box text-center">
                                <a href="@Url.Action("Details", "Prospectos", new { id=Model.IdProspecto })" class="btn btn-lg btn-azul"><i class="far fa-arrow-alt-circle-left"></i> Regresar</a>
                                <button type="submit" class="btn btn-lg btn-azul"><i class="far fa-save"></i> Actualizar</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
