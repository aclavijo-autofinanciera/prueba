}
@if (ViewData["Warning"] != null)
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger mb-0" role="alert">
                        @ViewData["Warning"]
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
