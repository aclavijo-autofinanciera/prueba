                            </div>
                            <div class="col-12 col-md-8 text-black-65 text-uppercase">
                                @String.Format("$ {0:0,0.00}", Model.IvaCuotaIngreso)
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-12 col-md-8">
