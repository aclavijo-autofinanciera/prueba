@model IEnumerable<ContratoDigital.Models.Prospecto>
@{
    ViewData["Title"] = "Búsqueda de prospectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div style="background: url('../../../../images/background/prospect.jpg') no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;min-height: 20rem;">
                    <h1 class="text-white text-center text-shadow" data-aos="fade-in" data-aos-delay="500" style="max-width: 350px;position:absolute;left: 50%;top: 50%;transform: translate(-50%,-50%);">
                        Buscar prospectos
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-12">
                @if (ViewData["NoEncontrado"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@ViewData["NoEncontrado"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form class="" method="post"  autocomplete="off">
                    <div class="form-row">
                        <div class="col">
                            <label for="NumeroDocumento">Número de documento</label>
                            <input type="text" class="form-control form-control-lg text-uppercase" name="NumeroDocumento" id="NumeroDocumento" placeholder="ej: 50123987" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="Nombre">Nombre del prospecto</label>
                            <input type="text" class="form-control form-control-lg text-uppercase" name="Nombre" id="Nombre" placeholder="Ej: Juanita Morel" />
                        </div>
                    </div>
                    <div class="form-row mt-4">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-azul"><i class="fas fa-search"></i> Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
}
@if (Model != null)
{
    <section class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    Resultados de la búsqueda
                    <hr />
                    <h2>
                        <span class="badge badge-autofinanciera">@ViewData["NumeroDocumento"]</span>
                        <span class="badge badge-autofinanciera">@ViewData["Nombre"]</span>
                    </h2>
                    
                    
                </div>
                <div class="col-12">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Acciones</th>
                                    <th>Nombre</th>
                                    <th>Cédula de ciudadanía</th>
                                    <th>Email</th>
                                    <th>Bien</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-azul dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    Acciones
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="@Url.Action("Details", "Prospectos", new {id = item.IdProspecto})"><i class="far fa-list-alt"></i> Detalles</a>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", "Prospectos", new {id = item.IdProspecto})"><i class="far fa-edit"></i> Editar</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@(item.PrimerNombre + " "+ item.SegundoNombre + " " + item.PrimerApellido + " " + item.SegundoApellido)</td>
                                        <td>@item.NumeroDocumento</td>
                                        <td>@item.Email</td>
                                        <td>@item.DescripcionDelBien</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <h5>No se encontraron resultados para su búsqueda.</h5>

                    }
                </div>
            </div>
        </div>
    </section>

}


